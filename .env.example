# ========================================
# DayPlan - Environment Configuration
# ========================================
# Copy this file to .env and update values for your environment:
#   cp .env.example .env
#
# NEVER commit your .env file to version control!

# ========================================
# Flask Environment
# ========================================
# Options: development, production, testing
FLASK_ENV=development

# Debug mode - MUST be False in production!
FLASK_DEBUG=False

# ========================================
# Server Settings
# ========================================
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# ========================================
# Security - SECRET_KEY
# ========================================
# IMPORTANT: Change this to a random value in production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-key-change-in-production

# ========================================
# Data Storage
# ========================================
# Path to the JSON data file (relative or absolute)
DATA_FILE_PATH=./dayplan_data.json

# ========================================
# Logging
# ========================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log file path (relative or absolute). Leave empty to disable file logging.
LOG_FILE=./logs/dayplan.log

# ========================================
# Gunicorn (Production WSGI Server)
# ========================================
# Only used when running with gunicorn (not Flask dev server)
# GUNICORN_BIND=127.0.0.1:8000
# GUNICORN_WORKERS=4
# GUNICORN_LOG_LEVEL=info
# GUNICORN_ACCESS_LOG=./logs/gunicorn-access.log
# GUNICORN_ERROR_LOG=./logs/gunicorn-error.log

# ========================================
# Backup Settings
# ========================================
# BACKUP_DIR=./backups
# BACKUP_RETENTION_DAYS=30

# ========================================
# Monitor Settings
# ========================================
# CHECK_INTERVAL=30
# RESTART_THRESHOLD=3
# MAX_RESTARTS=5
